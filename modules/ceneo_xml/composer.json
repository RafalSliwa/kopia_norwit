{
  "name": "ceneo/ceneoxml",
  "description": "Generates XML feed",
  "type": "module",
  "license": "AFL-3.0",
  "autoload": {
    "psr-4": {
      "CeneoXml\\": "src/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "prepend-autoloader": false,
    "optimize-autoloader": true
  },
  "authors": [
    {
      "name": "Ceneo"
    }
  ],
  "author": "Ceneo",
  "scripts": {
    "build:prod": "composer install -v --no-dev"
  },
  "require": {
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-curl": "*",
    "ext-simplexml": "*",
    "ext-xmlwriter": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.18.0",
    "prestashop/php-dev-tools": "^3.16.1"
  }
}
